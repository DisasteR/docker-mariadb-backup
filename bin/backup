#!/bin/bash

PIDFILE=/var/run/backup.pid

if [ -f $PIDFILE ]; then
    echo $0 is already running with pid $(cat $PIDFILE), aborting!
    exit 1
fi

echo $$ >$PIDFILE

if [ -z "${BACKUP_DATABASES}" ]; then
  mdbtool backup ${BACKUP_METHOD} ${BACKUP_OPTS}
else
  mdbtool multibackup ${BACKUP_METHOD} ${BACKUP_OPTS}
fi

retval=$?

rm $PIDFILE

exit $retval
